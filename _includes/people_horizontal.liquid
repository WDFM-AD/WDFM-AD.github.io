<div class="card-item col">  
    <div class="card">
      <div class="row g-0">        
        <div class="card-img col-md-4">
          {% include figure.liquid  path=include.img alt=include.name %}
        </div>
        <div class="col-md-7">
          <a href="{{ include.url | relative_url }}">       
          <div class="card-body">
            <h4 class="card-title">{{ include.name }}</h4>
            <h5 class="card-text">{{ include.affiliation }}</h5>                                                  
          </div>
          </a>
        </div>
      </div>
    </div>
</div>
