<div class="grid-item">
  <a href="{{ include.url | relative_url }}">
    <div class="card hoverable">      
      {% include figure.liquid path=include.img alt=include.name %}
      <div class="card-body">
        <h2 class="card-title">{{ include.name }}</h2>
        <h4 class="card-text">{{ include.affiliation }}</h4>        
        <p class="card-text">{{ include.bio }}</p>
      </div>
    </div>
  </a>
</div>